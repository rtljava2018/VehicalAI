<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/parent.contentLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="XYZ Demo"
                style="@style/viewParent.headerText" />

            <TextView
                android:text="welcome xyz dashboard"
                style="@style/viewParent.headerText.contentText"
                android:layout_marginBottom="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_frontview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="@drawable/home_gradient_car_frontview"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title1"
                        android:text="Front View"
                        style="@style/viewParent.headerText.HomeCardTitle" />

                    <TextView
                        android:text="Study nature, love nature,\nclose to nature"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title1"/>

                    <ImageView
                        android:maxHeight="90dp"
                        android:src="@mipmap/ic_camera"
                        style="@style/homeCardImage" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_sideview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="@drawable/home_gradient_car_sideview"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title2"
                        android:text="Side View"
                        style="@style/viewParent.headerText.HomeCardTitle" />

                    <TextView
                        android:text="Study nature, love nature,\nclose to nature"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title2"/>

                    <ImageView
                        android:maxHeight="90dp"
                        android:src="@mipmap/ic_camera"
                        style="@style/homeCardImage" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_backview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="@drawable/home_gradient_backview"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title3"
                        android:text="Back View"
                        style="@style/viewParent.headerText.HomeCardTitle" />

                    <TextView
                        android:text="Study nature, love nature,\nclose to nature"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title3"/>

                    <ImageView
                        android:maxHeight="90dp"
                        android:src="@mipmap/ic_camera"
                        style="@style/homeCardImage" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_steering"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="@drawable/home_gradient_carsteering"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title4"
                        android:text="Steering"
                        style="@style/viewParent.headerText.HomeCardTitle" />

                    <TextView
                        android:text="Study nature, love nature,\nclose to nature"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title4"/>

                    <ImageView
                        android:maxHeight="90dp"
                        android:src="@mipmap/ic_camera"
                        style="@style/homeCardImage" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_tyres"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="@drawable/home_gradient_car_tyres"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title5"
                        android:text="Tyres"
                        style="@style/viewParent.headerText.HomeCardTitle" />

                    <TextView
                        android:text="Study nature, love nature,\nclose to nature"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title5"/>

                    <ImageView
                        android:maxHeight="90dp"
                        android:src="@mipmap/ic_camera"
                        style="@style/homeCardImage" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>